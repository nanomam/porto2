
    const swiperContainer = document.querySelector('.mySwiper');

    function getWindowDimensions() {
      const height = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
      return height;
    }

    function setChatMessagesHeight() {
      const windowHeight = getWindowDimensions();
      swiperContainer.style.height = `${Math.max(30, (windowHeight * 1) - 20)}px`; // Adjust the factor as needed
    }

    // Call the function when the page loads
    setChatMessagesHeight();

    // Add an event listener to update dimensions when the window is resized
    window.addEventListener('resize', setChatMessagesHeight);

    //ffffffffffffffffffff

    const bdy = document.querySelector('body');

    function getWindowDimensions() {
      const height = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
      return height;
    }

    function setBodyHeight() {
      const windowHeight = getWindowDimensions();
      bdy.style.height = `${Math.max(30, windowHeight * 1)}px`; // Adjust the factor as needed
    }

    // Call the function when the page loads
    setBodyHeight();

    // Add an event listener to update dimensions when the window is resized
    window.addEventListener('resize', setBodyHeight);


